<% include partials/header %>

  </head>

  <body>

    <div class="container-fluid" id="header">
      <h1>Welcome to MARTA Online</h1>
    </div>

    <div class="container-fluid" id="window-cnt">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">Create a MARTA Account</h3>
        </div>
        <form method="POST" action="/createaccount">
          <div class="form-group">
            <label>Username:</label>
            <input type="text" id="username-input" name="username" placeholder="Ex: John123" class="form-control">
          </div>
          <div class="form-group">
            <label>Email Address:</label>
            <input type="text" id="email-input" placeholder="8 character minimum" name="email" class="form-control">
          </div>
          <div class="form-group">
            <label>Password:</label>
            <input type="password" id="password-input" placeholder="8 character minimum" name="password" class="form-control" data-toggle="password">
          </div>
          <div class="form-group">
            <label>Confirm Password:</label>
            <input type="password" id="password-input2" placeholder="8 character minimum" name="confirm" class="form-control" data-toggle="password">
          </div>
          

          <div class="container-fluid" id="breeze-cnt">
            <div class="panel panel-info">
              <div class="panel-heading">
                <h3 class="panel-title">Breeze Card</h3>
              </div>
              <div id="inner-box">
                <input type="radio" name="hasCard" value="true" checked> Use my existing Breeze Card<br>
                <div class="form-group" id="inline-textbox">
                  <label id="inline-label">Card Number</label>
                  <input type="text" id="inline-input" name="cardnum" placeholder="1234567890123456" class="form-control">
                </div>
                <input type="radio" name="hasCard" value="false"> Get a new Breeze Card 
              </div>
            </div>
          </div>


          <div class="error">
            <% if(messages){ %>
              <% messages.forEach(function(message){ %>
                <%= message %> <br>
              <% }) %>
            <% } %>
          </div>
          <div class="form-group button-group">
            <button type="submit" class="btn btn-primary" style="float: left" formaction="/">Back</button>
            <button class="btn btn-info" id="create-btn">Create Account</button> <!-- move these outside of form to stop url changing -->
          </div>
        </form>
      </div>
    </div>
  </body>

<% include partials/footer %>